<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/bg_login">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@+id/ll_login_container"
                android:src="@drawable/ic_launcher"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:layout_marginEnd="@dimen/dimen_32dp"
                android:layout_marginRight="@dimen/dimen_32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:id="@+id/ll_login_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="74dp"
                android:padding="@dimen/dimen_32dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_marginRight="74dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txtview_standard_widget"
                    android:text="Welcome to"/>

                <TextView
                    style="@style/txtview_title_widget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snowey"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:fontFamily="casual" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txtview_standard_widget"
                    android:text="Please sign in to continue"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/txtview_standard_widget"
                    android:hint="Enter your Email"
                    android:drawableTint="@color/orange"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:drawableStart="@drawable/ic_email"
                    android:drawableLeft="@drawable/ic_email" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/txtview_standard_widget"
                    android:hint="Password"
                    android:drawableTint="@color/orange"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:drawableStart="@drawable/ic_lock_outline"
                    android:drawableLeft="@drawable/ic_lock_outline" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:paddingRight="@dimen/dimen_16dp"
                    android:paddingLeft="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_btn_dark_circular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txtview_standard_widget"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:text="Forgot Password?"
                    android:textColor="@color/app_redcolor"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn_facebook"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                style="@style/txtview_standard_widget"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="Login Via"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dimen_16dp" />
            <ImageButton
                android:id="@+id/btn_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:elevation="@dimen/dimen_5dp"
                android:layout_above="@+id/tv_signup"
                android:background="@drawable/shape_circle_fb"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:layout_toLeftOf="@+id/btn_google"
                android:src="@drawable/ic_facebook"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:layout_toStartOf="@+id/btn_google" />
            <ImageButton
                android:id="@+id/btn_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:elevation="@dimen/dimen_5dp"
                android:background="@drawable/shape_circle_google"
                android:layout_above="@+id/tv_signup"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:src="@drawable/ic_google_plus"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dimen_16dp" />
            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtview_standard_widget"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:text="Dont't have an account? Sign Up"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>
