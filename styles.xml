<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="txtview_small_widget">
        <item name="android:textColor">@color/app_textcolor</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="txtview_standard_widget">
        <item name="android:textColor">@color/app_textcolor</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="txtview_title_widget">
        <item name="android:textColor">@color/app_textcolor_heading</item>
        <item name="android:textSize">@dimen/textSizeExtraLarge</item>
    </style>

    <style name="apptheme_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:background">@drawable/common_edit_text_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="apptheme_edittext_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/app_textcolor</item>
        <item name="android:textColorHint">@color/app_textcolor</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="apptheme_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
        <item name="android:background">@drawable/common_btn_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="login_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:padding">@dimen/dimen_8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

</resources>
